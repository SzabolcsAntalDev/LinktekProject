                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>
                                                    <TextBlock Text="▴" Style="{StaticResource AscendingColumnTextBlockStyle}" />
                                                    <TextBlock Text="▾" Style="{StaticResource DescendingColumnTextBlockStyle}" />
